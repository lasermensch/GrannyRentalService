@model Granny;

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label class="custom-control-label">First Name: </label>
                <input class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label class="custom-control-label">Last Name: </label>
                <input class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label class="custom-control-label">Age: </label>
                <input class="form-control" asp-for="Age" />
                <span asp-validation-for="Age"></span>
            </div>
            <div class="form-group">
                <label class="custom-control-label">Hourly Rate: </label>
                <input class="form-control" asp-for="HourlyRate" />
                <span asp-validation-for="HourlyRate"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Add Granny" />
            </div>
        </form>
    </div>
</div>

@section Scripts{ @{await Html.RenderPartialAsync("_validationScriptsPartial");}}